<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/material_white"
    android:orientation="vertical">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@color/primary900">

            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/faf_app_bar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:contentScrim="?attr/colorPrimary"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <ImageView
                    android:id="@+id/faf_flower_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_gradient"
                    android:contentDescription="@string/faf_content_flower_image"
                    android:scaleType="centerCrop"
                    app:layout_collapseMode="parallax" />

                <EditText
                    android:id="@+id/faf_flower_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|start"
                    android:layout_margin="@dimen/margin_normal"
                    android:hint="@string/faf_flower_name_hint"
                    android:imeOptions="actionDone"
                    android:inputType="textCapWords"
                    android:textColor="@color/white_primary_text"
                    android:textColorHint="@color/primary200"
                    app:layout_collapseMode="parallax"
                    tools:ignore="LabelFor" />

                <include
                    layout="@layout/toolbar_main"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize" />

                <ImageButton
                    android:id="@+id/faf_choose_image"
                    style="@style/ImageButtonStyle"
                    android:layout_gravity="top|end"
                    android:layout_margin="@dimen/margin_fab"
                    android:padding="@dimen/margin_normal"
                    android:src="@drawable/ic_edit"
                    tools:ignore="ContentDescription" />

            </android.support.design.widget.CollapsingToolbarLayout>

        </android.support.design.widget.AppBarLayout>

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/margin_fab"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <com.indoor.flowers.view.SettingsDataView
                android:id="@+id/faf_setting_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/faf_flower_image" />
        </android.support.v4.widget.NestedScrollView>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/faf_create"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_fab"
            android:src="@drawable/ic_add"
            android:text="@string/action_create"
            app:layout_anchor="@id/faf_app_bar"
            app:layout_anchorGravity="bottom|right|end"
            app:layout_behavior="@string/bottom_sheet_behavior" />

    </android.support.design.widget.CoordinatorLayout>

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/faf_snackbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:theme="@style/AppThemeDark" />

</LinearLayout>