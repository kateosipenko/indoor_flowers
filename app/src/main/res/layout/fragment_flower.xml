<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_light">

    <include layout="@layout/toolbar_main" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/faf_flower_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/faf_flower_container_margin"
        android:layout_marginStart="@dimen/faf_flower_container_margin"
        android:layout_marginTop="@dimen/faf_flower_container_margin"
        android:background="@color/material_white"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/margin_normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/faf_flower_image"
            android:layout_width="@dimen/faf_image_size"
            android:layout_height="@dimen/faf_image_size"
            android:background="@drawable/bg_gradient"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toTopOf="@+id/faf_flower_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription" />

        <ImageButton
            android:id="@+id/faf_choose_image"
            android:layout_width="@dimen/faf_edit_image_size"
            android:layout_height="@dimen/faf_edit_image_size"
            android:background="@drawable/shape_circle_accent"
            android:padding="@dimen/margin_small"
            android:src="@drawable/ic_edit"
            app:layout_constraintBottom_toBottomOf="@id/faf_flower_image"
            app:layout_constraintEnd_toEndOf="@id/faf_flower_image"
            tools:ignore="ContentDescription" />

        <EditText
            android:id="@+id/faf_flower_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|start"
            android:layout_margin="@dimen/margin_normal"
            android:hint="@string/faf_flower_name_hint"
            android:imeOptions="actionDone"
            android:inputType="textCapWords"
            android:textColor="@color/black_primary_text"
            android:textColorHint="@color/black_secondary_text"
            app:layout_constraintBottom_toTopOf="@+id/faf_save_container"
            app:layout_constraintTop_toBottomOf="@id/faf_flower_image"
            tools:ignore="LabelFor" />

        <LinearLayout
            android:id="@+id/faf_save_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/faf_flower_name">

            <Button
                android:id="@+id/faf_save"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/primary800"
                android:text="@string/action_save"
                android:textColor="@color/material_white" />

            <Button
                android:id="@+id/faf_delete"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_default"
                android:layout_weight="1"
                android:background="@color/accent700"
                android:text="@string/action_delete"
                android:textColor="@color/material_white"
                android:visibility="gone" />

        </LinearLayout>

    </android.support.constraint.ConstraintLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/margin_normal"
        android:layout_marginEnd="@dimen/margin_normal"
        android:layout_marginStart="@dimen/margin_normal"
        android:layout_marginTop="@dimen/margin_default"
        android:background="@color/material_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/faf_flower_container" />

    <Button
        android:id="@+id/faf_add_event"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_default"
        android:background="@color/accent200"
        android:text="@string/faf_add_event"
        android:textColor="@color/material_white"
        app:layout_constraintBottom_toTopOf="@+id/faf_snackbar" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/faf_events_list"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/margin_default"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:padding="@dimen/margin_default"
        app:layout_constraintBottom_toTopOf="@+id/faf_add_event"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/faf_flower_container" />

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/faf_snackbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:theme="@style/AppThemeDark" />

</android.support.constraint.ConstraintLayout>