<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/ff_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ToolbarTheme"
        app:popupTheme="@style/PopupTheme"
        tools:ignore="UnusedAttribute" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/ff_data_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/material_white"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:orientation="horizontal"
        android:padding="@dimen/margin_small"
        app:layout_constraintTop_toBottomOf="@id/ff_toolbar">

        <ImageView
            android:id="@+id/ff_icon"
            android:layout_width="@dimen/faf_image_size"
            android:layout_height="@dimen/faf_image_size"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/margin_default"
            android:background="@drawable/ic_flower_circle"
            android:elevation="@dimen/margin_normal"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="ContentDescription" />

        <ImageButton
            android:id="@+id/ff_change_icon"
            style="@style/ImageButtonStyle"
            android:elevation="@dimen/margin_default"
            android:src="@drawable/ic_photo_camera"
            android:tint="@color/accent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/ff_icon"
            app:layout_constraintStart_toEndOf="@id/ff_icon"
            tools:ignore="ContentDescription" />

        <com.indoor.flowers.view.NameView
            android:id="@+id/ff_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/margin_default"
            android:layout_marginStart="@dimen/margin_default"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/black_primary_text"
            android:textColorHint="@color/black_secondary_text"
            android:textCursorDrawable="@drawable/shape_accent_cursor"
            android:textSize="@dimen/text_body_medium"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ff_icon"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="ASd asd " />
    </android.support.constraint.ConstraintLayout>


    <android.support.design.widget.TabLayout
        android:id="@+id/ff_tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/material_white"
        android:theme="@style/PopupTheme"
        app:layout_constraintTop_toBottomOf="@id/ff_data_container"
        app:tabMode="scrollable" />

    <android.support.v4.view.ViewPager
        android:id="@+id/faf_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:layout_constraintBottom_toTopOf="@+id/faf_snackbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ff_tabs" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/faf_add_event"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_fab"
        android:src="@drawable/ic_add"
        app:layout_constraintBottom_toTopOf="@+id/faf_snackbar"
        app:layout_constraintEnd_toEndOf="parent" />

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/faf_snackbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:theme="@style/AppThemeDark" />

    <FrameLayout
        android:id="@+id/faf_progress_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_shadow"
        android:clickable="true"
        android:elevation="@dimen/margin_fab"
        android:focusable="true"
        android:visibility="gone"
        tools:visibility="gone">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:theme="@style/Dialog.ProgressDialog" />
    </FrameLayout>
</android.support.constraint.ConstraintLayout>