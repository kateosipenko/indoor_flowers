<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/ff_app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/material_white"
        android:elevation="0dp">

        <android.support.design.widget.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="0dp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <android.support.constraint.ConstraintLayout
                android:id="@+id/ff_data_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="?actionBarSize"
                android:background="@drawable/bg_shape_flower"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:orientation="horizontal"
                app:layout_collapseMode="parallax">

                <View
                    android:id="@+id/ff_icon_placeholder"
                    android:layout_width="@dimen/ff_collapsing_bar_size"
                    android:layout_height="@dimen/ff_collapsing_bar_size"
                    android:elevation="10dp"
                    android:padding="@dimen/margin_default"
                    android:src="@drawable/ic_photo_camera"
                    app:layout_collapseMode="parallax"
                    tools:ignore="ContentDescription" />

            </android.support.constraint.ConstraintLayout>

            <android.support.v7.widget.Toolbar
                android:id="@+id/ff_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:background="@color/primary_dark"
                android:elevation="0dp"
                android:tag="Toolbar"
                android:theme="@style/ToolbarTheme"
                app:collapseIcon="@drawable/ic_flower"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/PopupTheme"
                tools:ignore="UnusedAttribute" />

        </android.support.design.widget.CollapsingToolbarLayout>

        <android.support.design.widget.TabLayout
            android:id="@+id/ff_tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/PopupTheme"
            app:tabGravity="center"
            app:tabMode="scrollable" />

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/faf_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/faf_add_event"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/margin_fab"
        android:src="@drawable/ic_add"
        app:layout_anchor="@+id/faf_snackbar"
        app:layout_anchorGravity="end" />

    <ImageView
        android:id="@+id/ff_icon"
        android:layout_width="@dimen/ff_image_size"
        android:layout_height="@dimen/ff_image_size"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="?actionBarSize"
        android:background="@drawable/bg_flower_profile_icon"
        android:elevation="8dp"
        android:padding="@dimen/ff_image_start_padding"
        android:src="@drawable/ic_photo_camera"
        app:layout_behavior="com.indoor.flowers.util.behavior.AvatarToolbarBehavior"
        tools:ignore="ContentDescription" />

    <ImageButton
        android:id="@+id/ff_change_icon"
        style="@style/ImageButtonStyle"
        android:elevation="10dp"
        android:src="@drawable/ic_photo_camera"
        android:tint="@color/accent"
        app:layout_anchor="@id/ff_icon"
        app:layout_anchorGravity="end|bottom"
        app:layout_behavior="com.indoor.flowers.util.behavior.HideOnScrollBehavior"
        tools:ignore="ContentDescription" />

    <com.indoor.flowers.view.NameView
        android:id="@+id/ff_name"
        android:layout_width="@dimen/ff_name_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_margin="@dimen/margin_default"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@color/black_primary_text"
        android:textColorHint="@color/black_secondary_text"
        android:textCursorDrawable="@drawable/shape_accent_cursor"
        android:textSize="@dimen/text_headline_big"
        app:collapsedMarginStart="@dimen/ff_name_collapsed_margin"
        app:layout_anchor="@id/ff_icon"
        app:layout_anchorGravity="bottom|center_horizontal"
        app:layout_behavior="com.indoor.flowers.util.behavior.NameViewToolbarBehavior"
        tools:text="ASd asd " />

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/faf_snackbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:theme="@style/AppThemeDark" />

    <FrameLayout
        android:id="@+id/faf_progress_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_shadow"
        android:clickable="true"
        android:elevation="@dimen/margin_fab"
        android:focusable="true"
        android:visibility="gone"
        tools:visibility="gone">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:theme="@style/Dialog.ProgressDialog" />
    </FrameLayout>

</android.support.design.widget.CoordinatorLayout>