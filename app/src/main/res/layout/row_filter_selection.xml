<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rfs_root"
    android:layout_width="match_parent"
    android:layout_height="@dimen/rfs_row_height"
    android:background="@drawable/sel_image_btn_bg"
    android:clickable="true"
    android:focusable="true">

    <CheckBox
        android:id="@+id/rfs_check_box"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/rfs_icon"
        android:layout_width="@dimen/rfs_row_height"
        android:layout_height="@dimen/rfs_row_height"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toEndOf="@id/rfs_check_box"
        tools:ignore="ContentDescription"
        tools:src="@drawable/ic_flower" />

    <TextView
        android:id="@+id/rfs_title"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/margin_default"
        android:gravity="center_vertical"
        android:textColor="@color/black_secondary_text"
        android:textSize="@dimen/text_body_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/rfs_icon"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Flower" />

</android.support.constraint.ConstraintLayout>