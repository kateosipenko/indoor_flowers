<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rf_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical">

    <CheckBox
        android:id="@+id/rf_check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/rf_icon"
        android:layout_width="@dimen/fm_rooms_width"
        android:layout_height="@dimen/fm_rooms_width"
        android:background="@drawable/ic_flower"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toEndOf="@id/rf_check_box"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/rf_title"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/margin_default"
        android:textColor="@color/black_primary_text"
        android:textSize="@dimen/text_body_medium"
        app:layout_constraintBottom_toTopOf="@+id/rf_last_watering"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/rf_icon"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Flowers" />

    <TextView
        android:id="@+id/rf_last_watering"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="bottom"
        android:textColor="@color/black_secondary_text"
        android:textSize="@dimen/text_body_normal"
        app:layout_constraintBottom_toTopOf="@+id/rf_days_to_watering"
        app:layout_constraintEnd_toEndOf="@id/rf_title"
        app:layout_constraintStart_toStartOf="@id/rf_title"
        app:layout_constraintTop_toBottomOf="@id/rf_title"
        tools:text="15 Feb 2018" />

    <TextView
        android:id="@+id/rf_days_to_watering"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="bottom"
        android:textColor="@color/black_secondary_text"
        android:textSize="@dimen/text_body_small"
        app:layout_constraintBottom_toBottomOf="@id/rf_icon"
        app:layout_constraintEnd_toEndOf="@id/rf_title"
        app:layout_constraintStart_toStartOf="@id/rf_title"
        app:layout_constraintTop_toBottomOf="@id/rf_last_watering"
        tools:text="Room 1" />

    <ProgressBar
        android:id="@+id/rf_watering_level"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:backgroundTint="@color/material_blue_primary400"
        android:max="100"
        android:progressTint="@color/material_blue_primary400"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rf_icon"
        tools:progress="50" />

</android.support.constraint.ConstraintLayout>