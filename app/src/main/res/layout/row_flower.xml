<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/rf_icon"
        android:layout_width="@dimen/fm_rooms_width"
        android:layout_height="@dimen/fm_rooms_width"
        android:background="@drawable/ic_flower"
        android:scaleType="centerCrop"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/rf_title"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/padding_medium"
        android:textColor="@color/black_primary_text"
        android:textSize="@dimen/text_body_big"
        app:layout_constraintBottom_toTopOf="@+id/rf_days_to_watering"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/rf_icon"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Flowers" />

    <TextView
        android:id="@+id/rf_days_to_watering"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="bottom"
        android:textColor="@color/black_secondary_text"
        android:textSize="@dimen/text_body_medium"
        app:layout_constraintBottom_toBottomOf="@id/rf_icon"
        app:layout_constraintEnd_toEndOf="@id/rf_title"
        app:layout_constraintStart_toStartOf="@id/rf_title"
        app:layout_constraintTop_toBottomOf="@id/rf_title"
        tools:text="Room 1" />

</android.support.constraint.ConstraintLayout>