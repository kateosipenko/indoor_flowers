<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rg_root"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:orientation="horizontal"
    tools:layout_height="60dp">

    <TextView
        android:id="@+id/rg_title"
        style="@style/GroupTitleStyle"
        android:layout_marginStart="@dimen/padding_normal"
        tools:text="Kitchen" />

    <View
        android:id="@+id/rg_alert"
        android:layout_width="@dimen/circle_notification_size"
        android:layout_height="@dimen/circle_notification_size"
        android:layout_marginTop="@dimen/padding_normal"
        android:background="@drawable/shape_circle_accent"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@id/rg_title"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

</android.support.constraint.ConstraintLayout>