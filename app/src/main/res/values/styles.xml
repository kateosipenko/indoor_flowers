<resources>

    <declare-styleable name="ValueSeekBar">
        <attr name="header" format="string" />
        <attr name="headerTextColor" format="color" />
        <attr name="headerTextSize" format="dimension" />
        <attr name="valueTextColor" format="color" />
        <attr name="valueTextSize" format="dimension" />
        <attr name="minValue" format="float" />
        <attr name="maxValue" format="float" />
        <attr name="defaultValue" format="float" />
    </declare-styleable>

    <style name="ImageButtonStyle">
        <item name="android:background">@drawable/sel_image_btn_bg</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="TextButtonStyle" parent="ImageButtonStyle">
        <item name="android:textColor">@color/accent</item>
        <item name="android:elevation">5dp</item>
    </style>

    <style name="Dialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@color/material_white</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="Dialog.Transparent" parent="Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="Dialog.CustomView" parent="Dialog.Transparent" />

    <style name="Dialog.ProgressDialog" parent="Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:gravity">center</item>
        <item name="android:textColorPrimary">@color/accent</item>
    </style>

    <style name="EmptyTextStyle">
        <item name="android:textSize">@dimen/text_body_big</item>
        <item name="android:textColor">@color/black_secondary_text</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">top|center_horizontal</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_margin">@dimen/margin_default</item>
    </style>

    <style name="MonthViewItem">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="layout_columnWeight">1</item>
        <item name="layout_rowWeight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black_primary_text</item>
        <item name="android:textSize">@dimen/text_body_normal</item>
        <item name="android:background">@drawable/sel_month_item</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="GroupTitleStyle">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/text_body_medium</item>
        <item name="android:textColor">@color/black_primary_text</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:clickable">true</item>
        <item name="android:padding">@dimen/margin_small</item>
    </style>

    <style name="FabLabelStyle">
        <item name="android:textColor">@color/black_secondary_text</item>
        <item name="android:elevation">@dimen/margin_small</item>
        <item name="android:textSize">@dimen/text_body_normal</item>
        <item name="android:padding">@dimen/margin_normal</item>
        <item name="android:background">@drawable/bg_fab_label</item>
    </style>

    <style name="WeekDayStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/black_secondary_text</item>
        <item name="android:textSize">@dimen/text_body_small</item>
    </style>

</resources>
