<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.Base" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:colorControlHighlight">@color/control_highlight</item>
        <item name="android:colorControlNormal">@color/primary</item>
        <item name="android:colorControlActivated">@color/primary</item>
        <item name="actionModeBackground">@color/primary</item>
        <item name="android:windowBackground">@color/window_bg</item>
        <item name="android:textColor">@color/black_secondary_text</item>
        <item name="android:textSize">@dimen/text_body_medium</item>
        <item name="listChoiceBackgroundIndicator">@drawable/sel_pre_lollipop_list</item>
        <item name="android:listChoiceBackgroundIndicator">?listChoiceBackgroundIndicator</item>
        <item name="selectableItemBackground">@drawable/sel_pre_lollipop_item_bg</item>
        <item name="android:selectableItemBackground">?selectableItemBackground</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:statusBarColor">@color/primary_dark</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowSharedElementEnterTransition">@android:transition/move</item>
        <item name="android:windowSharedElementExitTransition">@android:transition/move</item>
    </style>

    <style name="AppTheme" parent="AppTheme.Base" />

    <style name="AppThemeDark" parent="AppTheme.Base">
        <item name="android:textColor">@color/white_primary_text</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorControlNormal">@color/toolbar_control_normal</item>
        <item name="colorControlActivated">@color/toolbar_control_activated</item>
    </style>

    <style name="PopupTheme" parent="ThemeOverlay.AppCompat.Light" />

</resources>